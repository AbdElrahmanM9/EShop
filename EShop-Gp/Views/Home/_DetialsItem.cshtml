@model EShop_Gp.ViewModel.ItemsList

@{
    ViewBag.Title = "Detials Item";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Item.NameEn))
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item.NameAr))
        </dd>
        <dd>
            <img style="height:200px; width:200px;" src="@Url.Content(Model.Item.Image))" alt="Sample Image" />
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Item.Price)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item.Price)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Item.Description)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Item.Description)
        </dd>

    </dl>
</div>

